# Nome do aplicativo Laravel
APP_NAME=Laravel

# Ambiente de execução (local, produção, etc.)
APP_ENV=local

# Chave de criptografia do aplicativo
APP_KEY=base64:6nCM2ULBqbvsdvHehQ1BVCQWnpDohwCiiU3sAVAeePA=

# Ativa/desativa o modo de depuração
APP_DEBUG=true

# URL base do aplicativo
APP_URL=http://localhost

# Canal de log utilizado
LOG_CHANNEL=stack

# Canal para logs de descontinuação (depreciação)
LOG_DEPRECATIONS_CHANNEL=null

# Nível de detalhamento dos logs
LOG_LEVEL=debug

# Configurações do banco de dados
DB_CONNECTION=mysql        # Tipo de conexão do banco de dados
DB_HOST=db                # Host do banco de dados
DB_PORT=3306              # Porta do banco de dados
DB_DATABASE=fatecmeets    # Nome do banco de dados
DB_USERNAME=user          # Usuário do banco de dados
DB_PASSWORD=password      # Senha do banco de dados

# Configurações de drivers e armazenamento
BROADCAST_DRIVER=log      # Driver de broadcast
CACHE_DRIVER=file         # Driver de cache
FILESYSTEM_DISK=local     # Disco do sistema de arquivos
QUEUE_CONNECTION=sync     # Tipo de conexão da fila
SESSION_DRIVER=file       # Driver de sessão
SESSION_LIFETIME=120      # Tempo de vida da sessão (em minutos)

# Configuração do Memcached
MEMCACHED_HOST=127.0.0.1  # Host do Memcached

# Configuração do Redis
REDIS_HOST=127.0.0.1      # Host do Redis
REDIS_PASSWORD=null       # Senha do Redis
REDIS_PORT=6379           # Porta do Redis

# Configurações de e-mail
MAIL_MAILER=smtp              # Protocolo de envio de e-mail
MAIL_HOST=mailpit             # Host do servidor de e-mail
MAIL_PORT=1025                # Porta do servidor de e-mail
MAIL_USERNAME=null            # Usuário do servidor de e-mail
MAIL_PASSWORD=null            # Senha do servidor de e-mail
MAIL_ENCRYPTION=null          # Tipo de criptografia do e-mail
MAIL_FROM_ADDRESS="hello@example.com" # Endereço de e-mail do remetente
MAIL_FROM_NAME="${APP_NAME}"          # Nome do remetente

# Configurações da AWS
AWS_ACCESS_KEY_ID=                # Chave de acesso AWS
AWS_SECRET_ACCESS_KEY=            # Chave secreta AWS
AWS_DEFAULT_REGION=us-east-1      # Região padrão AWS
AWS_BUCKET=                       # Bucket S3
AWS_USE_PATH_STYLE_ENDPOINT=false # Utilizar endpoint estilo path

# Configurações do Pusher
PUSHER_APP_ID=            # ID do aplicativo Pusher
PUSHER_APP_KEY=           # Chave do aplicativo Pusher
PUSHER_APP_SECRET=        # Segredo do aplicativo Pusher
PUSHER_HOST=              # Host do Pusher
PUSHER_PORT=443           # Porta do Pusher
PUSHER_SCHEME=https       # Esquema de conexão (http/https)
PUSHER_APP_CLUSTER=mt1    # Cluster do Pusher

# Variáveis para uso com Vite (ferramenta de build frontend)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"           # Chave do Pusher para Vite
VITE_PUSHER_HOST="${PUSHER_HOST}"                 # Host do Pusher para Vite
VITE_PUSHER_PORT="${PUSHER_PORT}"                 # Porta do Pusher para Vite
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"             # Esquema do Pusher para Vite
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"   # Cluster do Pusher para Vite
